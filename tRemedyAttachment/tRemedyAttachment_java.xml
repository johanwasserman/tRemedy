<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT> 
	<HEADER 
		PLATEFORM="ALL" 
		SERIAL="" 
		VERSION="0.397" 
		STATUS="ALPHA"
		COMPATIBILITY="ALL" 
		AUTHOR="johan.wasserman@gmail.com" 
		RELEASE_DATE="20110229A"
		STARTABLE="false" 
		HAS_CONDITIONAL_OUTPUTS="true"
		DATA_AUTO_PROPAGATE="false"
		SCHEMA_AUTO_PROPAGATE ="true"
		PARTITIONING="AUTO"
		>
		<SIGNATURE />
	</HEADER>

	<FAMILIES> 
		<FAMILY>Business/BMC Remedy</FAMILY> 
	</FAMILIES>  
	<DOCUMENTATION> 
		<URL>http://www.sxsesoftware.com</URL>
		<!--<URL>http://www.sxsesoftware.com/talend/components/tRemedyAttachment.html</URL>--> 
	</DOCUMENTATION>  
	<CONNECTORS> 
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MIN_INPUT="1" MAX_OUTPUT="1"/> 
		<CONNECTOR NAME="REJECT" NOT_SHOW_IF="(DIEONERROR == 'true')" CTYPE="FLOW" MAX_INPUT="0"
			MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>
	<PARAMETERS> 
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="10">
			<DEFAULT/>
		</PARAMETER>
  
		<PARAMETER NAME="PROCESS" FIELD="CLOSED_LIST" REQUIRED="true" NUM_ROW="20">
			<ITEMS DEFAULT="ATT_DOWNLOAD">
				<ITEM NAME="ATT_DOWNLOAD" VALUE="ATT_DOWNLOAD" />
				<ITEM NAME="ATT_UPLOAD" VALUE="ATT_UPLOAD" />
			</ITEMS>
		</PARAMETER>
  		<PARAMETER NAME="TEMPORARY_DATA_DIRECTORY" FIELD="DIRECTORY"
			   NUM_ROW="30" GROUP="STORE_ON_DISK">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/temp"</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="DOWN_ID_FIELD" FIELD="PREV_COLUMN_LIST" NUM_ROW="35" REQUIRED="true" SHOW_IF="PROCESS == 'ATT_DOWNLOAD'">
		</PARAMETER>
		<PARAMETER NAME="DOWN_LOOKUP_COLS" FIELD="TABLE" REQUIRED="false" NUM_ROW="40" NB_LINES="3" SHOW_IF="PROCESS == 'ATT_DOWNLOAD'">
			<ITEMS>
				<ITEM NAME="INPUT_COLUMN" FIELD="PREV_COLUMN_LIST" />
				<ITEM NAME="OUTPUT_COLUMN" FIELD="COLUMN_LIST" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="UP_LOOKUP_COLS" FIELD="TABLE" REQUIRED="false" NUM_ROW="50" NB_LINES="3" SHOW_IF="PROCESS == 'ATT_UPLOAD'">
			<ITEMS>
				<ITEM NAME="INPUT_COLUMN" FIELD="COLUMN_LIST" />
				<ITEM NAME="SOURCE_COLUMN" FIELD="FILE_PATTERN" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="DELETE_ORIGINAL" FIELD="CHECK" NUM_ROW="55" SHOW_IF="PROCESS == 'ATT_UPLOAD'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	    <PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="60" CONTEXT="REJECT" SHOW="true">
			<TABLE READONLY="true">
			    <COLUMN NAME="ETL_ATTACH_ERR" TYPE="id_String" READONLY="true" CUSTOM="true"/>
			</TABLE>
		</PARAMETER>
		<PARAMETER NAME="LOG4J_ACTIVATE" FIELD="CHECK" REQUIRED="false" NUM_ROW="70">
  			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</PARAMETERS>
	
	<ADVANCED_PARAMETERS> 
	
	</ADVANCED_PARAMETERS>  
	
	<CODEGENERATION> 
		<IMPORTS> 
			<IMPORT MODULE="arapi81_build001.jar" NAME="arapi81_build001" REQUIRED="true"/>  
			<IMPORT MODULE="log4j-1.2.14.jar" NAME="log4j" REQUIRED="true"/>
		</IMPORTS> 
	</CODEGENERATION>  
	
	<RETURNS> 
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer"/> 
	</RETURNS> 
</COMPONENT>
